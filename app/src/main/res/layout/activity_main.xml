<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="@dimen/width_logo_joinus"
        android:layout_height="@dimen/height_logo_joinus"
        android:layout_centerInParent="true"
        android:background="@mipmap/image_joinus_foreground" />

    <EditText
        android:id="@+id/editTextUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/editTextPassword"
        android:layout_margin="@dimen/multiplier_4"
        android:drawableStart="@drawable/vector_person"
        android:hint="@string/hintUser" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/buttonLogin"
        android:layout_margin="@dimen/multiplier_4"
        android:drawableStart="@drawable/vector_lock"
        android:hint="@string/hintPassword" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="@dimen/multiplier_4"
        android:layout_alignParentBottom="true"
        android:text="@string/login" />


</RelativeLayout>