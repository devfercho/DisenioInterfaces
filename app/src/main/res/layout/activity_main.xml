<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="@dimen/dimens_logo_joinus"
        android:layout_height="@dimen/dimens_logo_joinus"
        android:layout_gravity="center"
        android:background="@mipmap/image_joinus_foreground" />

    <EditText
        android:id="@+id/editTextUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_bottom_user"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="@dimen/multiplier_4"
        android:drawableStart="@drawable/vector_person"
        android:hint="@string/hintUser" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/margin_bottom_password"
        android:layout_marginHorizontal="@dimen/multiplier_4"
        android:drawableStart="@drawable/vector_lock"
        android:hint="@string/hintPassword" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="@dimen/multiplier_4"
        android:text="@string/login" />


</FrameLayout>